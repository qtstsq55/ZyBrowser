<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="@color/dividing_line"
                android:startColor="@color/dividing_line" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress" >
        <clip>
            <shape >
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/caution_fc4"
                    android:startColor="@color/caution_fc4" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="@color/caution_fc4"
                    android:startColor="@color/caution_fc4" />
            </shape>
        </clip>
    </item>

</layer-list>