<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/accent_fc5</item>
        <item name="colorPrimaryDark">@color/accent_fc5</item>
        <item name="colorAccent">@color/keyword_tasK_me</item>
        <item name="colorControlNormal">@color/keyword_tasK_me</item>
        <item name="android:textColorPrimary">@color/backgroud_2</item>
        <item name="android:textColor">@color/backgroud_2</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
